<project>
    <shortName>Blacksun</shortName>
    <fullName>Blacksun</fullName>
    <version>1.0.0</version>
    <installerFilename>${product_shortname}-${product_version}-${platform_name}_QT-installer.${platform_exec_suffix}</installerFilename>
    <licenseFile>blacksun_all/License.txt</licenseFile>
    <leftImage>Images/installerLeftSide.png</leftImage>
    <logoImage>Images/InstallerLogo.png</logoImage>
    <splashImage>Images/InstallerSplash.png</splashImage>
    <saveRelativePaths>1</saveRelativePaths>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>blacksun_all/Logfile.html</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>blacksun_all/doc</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>blacksun_win/BlackSun.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/Core.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/GUI.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/PlgMgr.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/Renderer.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/Scenegraph.dll</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>blacksun_win/Plugins</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>blacksun_win/mingwm10.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/QtCore4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/QtGui4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/QtOpenGL4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/QtXml4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/UpdaterApp.exe</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/uninstall.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Start the Blacksun 3D Modeller</comment>
                    <name>${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/Blacksun.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuLinkShortcut>
                    <comment>Show the Logfile</comment>
                    <name>Logfile</name>
                    <runInTerminal>0</runInTerminal>
                    <url>file://${installdir}/Logfile.html</url>
                    <windowsIcon></windowsIcon>
                </startMenuLinkShortcut>
                <startMenuLinkShortcut>
                    <comment>The Blacksun manual</comment>
                    <name>Manual</name>
                    <runInTerminal>0</runInTerminal>
                    <url>file://${installdir}/doc/Manual.html</url>
                    <windowsIcon></windowsIcon>
                </startMenuLinkShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}/${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>

