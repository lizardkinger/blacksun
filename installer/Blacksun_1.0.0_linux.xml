<project>
    <shortName>Blacksun</shortName>
    <fullName>Blacksun</fullName>
    <version>1.0.0</version>
    <licenseFile>blacksun_all/License.txt</licenseFile>
    <leftImage>Images/installerLeftSide.png</leftImage>
    <logoImage>Images/InstallerLogo.png</logoImage>
    <splashImage>Images/InstallerSplash.png</splashImage>
    <postInstallationScript>${installdir}/Install.sh</postInstallationScript>
    <postInstallationScriptArguments>${installdir}</postInstallationScriptArguments>
    <showPostInstallationScriptResult>1</showPostInstallationScriptResult>
    <saveRelativePaths>1</saveRelativePaths>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>blacksun_all/License.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_all/Logfile.html</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>blacksun_all/doc</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>blacksun_linux/BlackSun</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libCore.so</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libCore.so.1</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libCore.so.1.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libCore.so.1.0.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libGUI.so</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libGUI.so.1</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libGUI.so.1.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libGUI.so.1.0.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libPlgMgr.so</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libPlgMgr.so.1</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libPlgMgr.so.1.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libPlgMgr.so.1.0.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libRenderer.so</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libRenderer.so.1</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libRenderer.so.1.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libRenderer.so.1.0.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libScenegraph.so</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libScenegraph.so.1</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libScenegraph.so.1.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libScenegraph.so.1.0.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/Start.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/UpdaterApp</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>blacksun_linux/Plugins</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>blacksun_linux/Install.sh</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/uninstall.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}/${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>

