<project>
    <shortName>Blacksun</shortName>
    <fullName>Blacksun</fullName>
    <version>0.8.0</version>
    <readmeFile>blacksun_all/README.txt</readmeFile>
    <licenseFile>blacksun_all/License.txt</licenseFile>
    <splashImage>../editor/blacksun/media/splash.png</splashImage>
    <showPostInstallationScriptResult>1</showPostInstallationScriptResult>
    <saveRelativePaths>1</saveRelativePaths>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>blacksun_all/License.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_all/README.txt</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>blacksun_all/doc</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswin</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>blacksun_win/BlackSun.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/Core.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/GUI.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/PlgMgr.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/Renderer.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_win/Scenegraph.dll</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>blacksun_win/Plugins</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>blacksun_linux/BlackSun</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/Install.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libCore.so.0.8.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libGUI.so.0.8.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libPlgMgr.so.0.8.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libRenderer.so.0.8.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/libScenegraph.so.0.8.0</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>blacksun_linux/Start.sh</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>blacksun_linux/Plugins</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/uninstall.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Blacksun, a free 3D Modeller</comment>
                    <name>Blacksun</name>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/Blacksun.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/</windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}/${product_version}</value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <postInstallationScript>sh</postInstallationScript>
            <postInstallationScriptArguments>${installdir}/Install.sh</postInstallationScriptArguments>
            <platform>linux</platform>
        </platformOptions>
    </platformOptionsList>
</project>

